# Kickstart file automatically generated by anaconda.

# FTP経由でのインストールを指定
install
url --url=ftp://ftp.jaist.ac.jp/pub/Linux_CentOS/6/os/x86_64/

lang ja_JP.UTF-8
network --bootproto dhcp
keyboard jp106
zerombr
clearpart -all

# パーティション設定の記述
part / --fstype ext4 --size=1 --grow --asprimary
part /var --fstype ext4 --size=40960
part /home --fstype ext4 --size=81920
part /boot --fstype ext4 --size=400
part swap --size=4096
bootloader --location=mbr --driver=sda --append="crashkernel=auto rhgb quiet"
timezone --utc Asia/Tokyo
rootpw vagrant
selinux --disabled
firewall --disabled
authconfig --enableshadow --passalgo=sha512
reboot

repo --name="CentOS" --baseurl=ftp://ftp.jaist.ac.jp/pub/Linux/CentOS/6/os/x86_64/ --cost=100

# インストールするパッケージ群を指定
%packages
@base
@console-internet
@core
@debugging
@japanese-support
@large-systems
@network-file-system-client
@server-platform
@server-policy
pax
oddjob
sgpio
certmonger
pam_krb5
krb5-workstation

#setup start
# パッケージインストール時にシェルスクリプトを実行



